extends ../layouts/common

block content
	h1 Users
		
	div(class="container")
		a(href="/users/create", class="btn btn-info") New
		form(action="/users/search", method="GET", class="d-flex")
			input(type="text", name="q", class="form-control")
			button(class="btn btn-primary ml-2") Search
				
		ul(class="list-group")
			each user in users
				li(class="list-group-item")
					span= user.name
					span &nbsp;
					a(href='/users/' + user.id, class="btn btn-info") View